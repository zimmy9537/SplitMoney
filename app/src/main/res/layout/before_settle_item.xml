<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/before_expense_back"
    android:orientation="horizontal"
    android:layout_margin="20dp"
    android:padding="5dp">

    <ImageView
        android:id="@+id/friend_image"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/group" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/friendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Jignesh Changela"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/friendContact"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="jignesh.changela@ril.com"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/oweString"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Owe"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/oweAmount"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="$500"
            android:textSize="24sp"/>

    </LinearLayout>

</LinearLayout>